<!DOCTYPE html>
<html lang="en" data-bs-theme="" id="htmlPage">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - _2024Demo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/_2024Demo.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .text-resize-buttons {
            position: fixed;
            top: 10px;
            right: 250px; 
            z-index: 1030;
            display: flex;
            gap: 10px;
        }

        .google-translate-container {
            position: fixed;
            bottom: 10px; 
            right: 10px;
            z-index: 1030;
            background-color: #fff;
            padding: 5px;
            border-radius: 5px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">_2024Demo</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Patient" asp-action="Index">Patient</a>
                        </li>
                    </ul>
                </div>
                <div class="justify-content-center" onclick="toggleTheme()">
                    <input type="checkbox" class="checkbox" id="checkbox" />
                    <label for="checkbox" class="checkbox-label">
                        <span class="ball"></span>
                        <i class="fas fa-moon"></i>
                        <i class="fas fa-sun"></i>
                    </label>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- 右上角縮放文字功能 -->
    <div class="text-resize-buttons">
        <button type="button" class="btn btn-primary" id="increaseFont">放大文字</button>
        <button type="button" class="btn btn-secondary" id="decreaseFont">縮小文字</button>
        <button type="button" class="btn btn-warning" id="resetFont">重置文字</button>
    </div>

   
    <div class="google-translate-container">
        <div id="google_translate_element"></div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - _2024Demo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

   
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const resizableElements = document.querySelectorAll(".text-resizable");
            let fontSize = 16;

            document.getElementById("increaseFont").addEventListener("click", function () {
                fontSize += 2;
                resizableElements.forEach(el => {
                    el.style.fontSize = fontSize + "px";
                });
            });

            document.getElementById("decreaseFont").addEventListener("click", function () {
                fontSize = Math.max(12, fontSize - 2);
                resizableElements.forEach(el => {
                    el.style.fontSize = fontSize + "px";
                });
            });

            document.getElementById("resetFont").addEventListener("click", function () {
                fontSize = 16;
                resizableElements.forEach(el => {
                    el.style.fontSize = fontSize + "px";
                });
            });
        });
    </script>

    
    <script type="text/javascript">
        function googleTranslateElementInit() {
            new google.translate.TranslateElement({
                pageLanguage: 'en',
                includedLanguages: 'en,zh-TW,zh-CN,ja,ko,es,fr,de,it,pt,ru',
                layout: google.translate.TranslateElement.InlineLayout.SIMPLE
            }, 'google_translate_element');
        }
    </script>
    <script src="https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
